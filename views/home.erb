<html>
	<head>
		<link type="text/css" rel="stylesheet" href="/css/stylesheet.css"/>
		<title>Aling Nena's Sari-Sari Store</title>
	</head>
	<body>
		<div id="header"></div>
		<br />
		<hr>
		<a href="/about" class="navbar">ABOUT US</a>
		<a href="/product" class="navbar">PRODUCTS</a>
		<hr>
		<br />
		<h1>POPULAR ITEMS</h1>
    <img src="/img/phrase_one.png" class="phrase" />
    <img src="/img/pyramid.png" id="home" />
        <table class="home">
          <thead>
            <tr>
              <td>Name</td>
              <td>Price</td>
            </tr>
          </thead>
          <tbody>
          <%if @products.length == 0 %>
          <tr>
           	<td>Sorry All Items Have Been Purchased</td>
           </tr>
          <%else%> 
          	<%if @products.length > 10 %>
            	<% @products.sample(10).each do |product| %>
            	<tr>
              	<td><a href="/purchase/<%= product.id %>" class="item">
              		<%= product.name %></a></td>
                  <td class="data"><%= product.price %></td>
              	</tr>
            	<%end%>
           	<%else%>
           		<% @products.each do |product| %>
            	<tr>
              		<td><a href="/purchase/<%= product.id %>" class="item"><%= product.name %></a></td>
                  <td class="data"><%= product.price %></td>
           		</tr>
           		<%end%>
			<% end %>
		<% end %>             
			</tbody>          
        </table>
        <br />
        <img src="/img/phrase_two.png" class="phrase" />
		<footer><strong>Aling Nena's Sari-Sari Store: A place open to <span>EVERYONE</span> all day and all night!</strong></footer>
	</body>
</html>